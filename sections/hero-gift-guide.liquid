<section class="page-width">
    <div class="page-section-gift-guide">
        {% if section.settings.image_title != blank %}
            {{ section.settings.image_title | image_url: width: 450 | image_tag }}
        {% else %}
            <h1>
                {{ section.settings.title}}
            </h1>
        {% endif %}
        <div class="content-items">
            {% for block in section.blocks %}
                <style>
                   @media only screen and (max-width: 600px) {
                        .collection-items-{{ block.id }} {
                            background-image: url('{{ block.settings.image_mobile | img_url: '720x720' }}') !important;
                        }
                    }
                </style>
                <div class="collection-item collection-items-{{ block.id }} {{ block.settings.custom_classes }}" style="background-image: url('{{ block.settings.image | img_url: '720x720' }}');">
                    <div class="collection-content">
                        <h2 style="color: {{ block.settings.color_text }}">{{ block.settings.title }}</h2>
                        <p style="color: {{ block.settings.color_text }}">{{ block.settings.description }}</p>
                        <a style="color: {{ block.settings.color_text }}" href="{{ block.settings.link }}" class="shop-button">{{ block.settings.button_text }}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>



{% schema %}
{
  "name": "Hero Gift Guide",
  "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Title Section",
        "default": "Our Holiday Collections"
    },
    {
        "type": "image_picker",
        "id": "image_title",
        "label": "Image Title"
    }
  ],
  "blocks": [
    {
      "type": "collection_item",
      "name": "Collection Item",
      "settings": [
        {
          "type": "textarea",
          "id": "custom_classes",
          "label": "Custom classes"        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Background Image Mobile"
        },
        {
            "type": "color",
            "id": "color_text",
            "label": "Color Text",
            "default": "#fff"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "The Red Edit"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Friends donâ€™t let friends miss out on the color of the season."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Collection >"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Gift Guid"
    }
  ]
}
{% endschema %}

