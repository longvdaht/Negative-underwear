@media only screen and (max-width: 600px) {
    .content-new-collage {
        padding: 0;
    }

    .collection-collage-item {
      background-size: cover;
    }
    .collection-collage-item:hover {
      background-size: cover;
    }
    .collection-collage-item h2 {
        font-size: 18px;
    }

    .collection-collage {
        grid-template-rows: repeat(3, 196px);
        grid-gap: 3px;
    }
    .content-new-collage h2{
      margin-bottom: 20px;
      margin-top: 15px;
    }
}

</style>
