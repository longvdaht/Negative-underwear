.clearfix {
  *zoom: 1;
}
.clearfix:after {
  content: "";
  display: table;
  clear: both;
}
/*============================================================================ #Base Styles ==============================================================================*/
body {
  background-color: #d5d5d5;
  background-image: url({{ settings.giftcard_background | image_url: width: 2048 }});
  background-size: cover;
  background-position: center;
  font-weight: 300;
  min-height: 100vh;
}
body a {
  text-decoration: none;
}
.print {
  display: none;
}
.template-giftcard .wrapper img, .template-giftcard .wrapper object, .template-giftcard .wrapper iframe {
  max-width: 100%;
}
.giftcard {
  max-width: 588px;
  margin: 0 auto;
}
.giftcard-header {
  padding: 30px 0;
  font-size: 1em;
  text-align: center;
  -webkit-animation: fadein 0.5s ease-in-out both 0.4s;
  animation: fadein 0.5s ease-in-out both 0.4s;
}
.giftcard-header img {
  width: 224px;
  height: auto;
}
.shop-url {
  display: none;
}
.giftcard__content {
  *zoom: 1;
  background-color: #fff;
  color: #222;
  border: 1px solid #222;
}
.giftcard__content:after {
  content: "";
  display: table;
  clear: both;
}
.giftcard__header {
  *zoom: 1;
  border-bottom: 1px solid #222;
  padding: 15px;
}
.giftcard__header:after {
  content: "";
  display: table;
  clear: both;
}
.giftcard__title {
  float: left;
  margin-bottom: 0;
}
.giftcard__tag {
  display: block;
  float: right;
  background-color: #f4aff4;
  border: 1px solid transparent;
  color: #fff;
  padding: 10px;
  border-radius: 4px;
  font-size: 0.75em;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  line-height: 1;
}
.giftcard__tag--active {
  background: transparent;
  color: #222222;
  border: 1px solid #fadcfa;
}
.giftcard__wrap {
  position: relative;
  margin: 15px 15px 0;
}
.giftcard__wrap img {
  position: relative;
  display: block;
  border-radius: 10px;
  z-index: 2;
}
.lt-ie9 .giftcard__wrap:before, .lt-ie9 .giftcard__wrap:after {
  display: none;
}
.giftcard__code {
  text-align: center;
  width: 100%;
  z-index: 50;
}
.giftcard__code--medium {
  font-size: 0.875em;
}
.giftcard__code--small {
  font-size: 0.75em;
}
.giftcard__code__inner {
  display: inline-block;
  vertical-align: baseline;
  background-color: #fff;
  max-width: 450px;
}
.giftcard__code--small .giftcard__code__inner {
  overflow: auto;
}
.giftcard__code__text {
  font-weight: 400;
  font-size: 1.875em;
  text-transform: uppercase;
  border-radius: 2px;
  padding: 0.4em 0.5em;
  display: inline-block;
  vertical-align: baseline;
  color: #222222;
  line-height: 1;
}
.disabled .giftcard__code__text {
  color: #999;
  text-decoration: line-through;
}
.giftcard__amount {
  font-size: 1.75em;
  line-height: 1.2;
  padding: 15px;
  z-index: 50;
  font-weight: 500;
}
.giftcard__amount strong {
  font-weight: 500;
}
.giftcard__amount--medium {
  font-size: 2em;
}
.tooltip__label {
  display: block;
  position: relative;
  right: -50%;
  border: none;
  border-radius: 4px;
  background: #333;
  background: rgba(51, 51, 51, 0.9);
  min-height: 14px;
  font-weight: 400;
  font-size: 12px;
  text-decoration: none;
  line-height: 16px;
  text-shadow: none;
  padding: 0.5em 0.75em;
  margin-left: 0.25em;
}
.tooltip__label small {
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: #b3b3b3;
  font-size: 0.875em;
}
.giftcard__instructions {
  text-align: center;
  margin: 0 15px 30px;
}
.giftcard__actions {
  position: relative;
  padding: 30px 0;
  text-align: center;
}
.giftcard__actions .btn, .giftcard__actions .action-link {
  font-size: 14px;
  font-weight: 500;
  font-weight: normal;
  display: inline-block;
  line-height: 1;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border: 1px solid #000;
  padding: 1em 0;
  margin: 0;
  text-align: center;
  width: 48%;
  background: #fff;
  color: #000;
  white-space: nowrap;
  -webkit-transition: all 0.2s ease-out;
  -moz-transition: all 0.2s ease-out;
  -ms-transition: all 0.2s ease-out;
  -o-transition: all 0.2s ease-out;
  transition: all 0.2s ease-out;
}
.giftcard__actions .btn:hover, .giftcard__actions .action-link:hover, .giftcard__actions .btn:focus, .giftcard__actions .action-link:focus {
  color: #fff;
  background: #000;
}
.giftcard__actions .btn {
  margin-right: 1%;
  float: left;
}
.giftcard__actions .action-link {
  margin-left: 1%;
  float: right;
}
.action-link__print {
  display: inline-block;
  vertical-align: baseline;
  width: 17px;
  height: 17px;
  vertical-align: middle;
  margin-right: 5px;
  opacity: 0.25;
  background-image: url('//cdn.shopify.com/s/assets/gift-card/icon-print-164daa1ae32d10d1f9b83ac21b6f2c70.png');
  background-repeat: no-repeat;
  background-position: 0 0;
}
.svg .action-link__print {
  background-image: url('//cdn.shopify.com/s/assets/gift-card/icon-print-6a10b2fb86d223b8c783c9696eaf4c31.svg');
}
.action-link:hover .action-link__print {
  opacity: 0.4;
}
.giftcard__footer {
  text-align: center;
  padding: 60px 0;
  -webkit-animation: fadein 0.5s ease-in-out both 0.4s;
  animation: fadein 0.5s ease-in-out both 0.4s;
}
#QrCode img {
  padding: 30px;
  border: 1px solid #222;
  border-radius: 4px;
  margin: 0 auto 30px;
}
/*============================================================================ #Media Queries ==============================================================================*/
/*================ Medium-down width ================*/
@media screen and (max-width: 580px) {
  .giftcard {
    font-size: 12px;
 }
  .giftcard-header {
    padding: 30px 0;
 }
  .header-logo {
    font-size: 2em;
 }
  .giftcard__border {
    padding: 15px;
 }
  .giftcard__actions {
    padding: 30px 0 0;
 }
  .giftcard__actions .btn, .giftcard__actions .action-link {
    width: 100%;
    padding-left: 0;
    padding-right: 0;
    margin-bottom: 15px;
 }
}
/*================ Small width ================*/
@media screen and (max-width: 400px) {
  .giftcard__amount strong {
    text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.1);
 }
  .giftcard__wrap:before, .giftcard__wrap:after {
    display: none;
 }
  .giftcard__code {
    font-size: 0.75em;
 }
  .giftcard__code--medium {
    font-size: 0.65em;
 }
  .giftcard__code--small {
    font-size: 0.55em;
 }
}
/*================ Small height ================*/
@media screen and (max-height: 800px) {
  .header-logo img {
    max-height: 90px;
 }
}
/*============================================================================ #Print Styles ==============================================================================*/
@media print {
  html, body {
    margin: 0;
    padding: 0;
    height: 100%;
    overflow: hidden;
 }
  .print {
    text-align: center;
    display: block;
    position: relative;
    max-height: 100%;
    max-height: 100vh;
    padding: 0;
    margin: 0;
 }
  .print .giftcard__wrap {
    position: absolute;
    margin: 0;
    bottom: 10%;
    width: 45.5%;
    left: 50%;
 }
  .print .giftcard__amount {
    font-size: 2.5em;
 }
  .print .print-img {
    margin: 0;
    padding: 0;
 }
  .print .giftcard__code__inner {
    max-width: none;
 }
  .print .giftcard__code__text {
    font-size: 1.5em;
 }
  .wrapper {
    display: none;
 }
  @page {
    margin: 0.5cm 0.5cm 0;
 }
  p, h2, h3 {
    orphans: 3;
    widows: 3;
 }
  h2, h3 {
    page-break-after: avoid;
 }
  html, body {
    background: #fff;
 }
  .giftcard-header {
    padding: 10px 0;
 }
  .giftcard__content, .giftcard__border {
    border: 0 none;
 }
  .giftcard__actions, .giftcard__wrap:before, .giftcard__wrap:after, .tooltip, .add-to-apple-wallet {
    display: none;
 }
  .giftcard__title {
    float: none;
    text-align: center;
 }
  .giftcard__code__text {
    color: #000;
    background: #ebf5f7;
 }
}
/*============================================================================ #Keyframe Animations ==============================================================================*/
@-webkit-keyframes slideup {
  0% {
    opacity: 0;
    -webkit-transform: translateY(2000px) rotate(10deg);
 }
  60% {
    opacity: 1;
    -webkit-transform: translateY(-30px);
 }
  80% {
    -webkit-transform: translateY(10px);
 }
  100% {
    -webkit-transform: translateY(0) rotate(0deg);
 }
}
